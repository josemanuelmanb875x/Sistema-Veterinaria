        text-shadow: 0 0 10px rgba(56, 189, 248, 0.5);
      }

      .subtitle {
        color: #94a3b8;
        margin-bottom: 2rem;
        font-size: 1rem;
      }

      strong { color: white; }

      /* Icono central */
      .success-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        animation: bounce 2s infinite;
      }

      .message {
        color: #cbd5e1;
        margin-bottom: 2.5rem;
        line-height: 1.5;
      }

