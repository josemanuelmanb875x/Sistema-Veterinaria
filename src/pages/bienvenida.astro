        padding: 0.8rem;
        background: transparent;
        border: 2px solid #38bdf8;
        border-radius: 8px;
        color: #38bdf8;
        font-weight: bold;
        text-decoration: none;
        transition: all 0.3s ease;
      }

      .logout-button:hover {
        background: #38bdf8;
        color: #0f172a;
        box-shadow: 0 0 20px rgba(56, 189, 248, 0.4);
      }

      /* DecoraciÃ³n de fondo */
      .light-blob {
        position: absolute;
        width: 300px;
        height: 300px;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
      }
      .blob-1 { background: #0ea5e9; top: 10%; left: 20%; }
      .blob-2 { background: #2563eb; bottom: 10%; right: 20%; }

      /* Animaciones */
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }

      @keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
      }
